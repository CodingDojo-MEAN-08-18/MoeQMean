<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Bootstrap 4 Styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="styles/main.css">

    <title>Chatroom by Moe</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="title">
                <h3 class="text-center">Welcome to Afghan Tea House v2</h3>
            </div>
        </div>
    </div>
    <div class="row reg">
        <div class="col-12">

            <div class="message">
                <div class="form-group">
                    <label for="name">Your name:</label>
                    <input class="form-control" type="text" name="name" id="name">
                </div>
                <button class="btn btn-primary float-right sub-btn">Submit</button>
                <div class="clear"></div>
            </div>

        </div>
    </div>

    <div class="row hidden">
        <div class="col-md-9">
            <div class="message-box">
                <div class="dialog"></div>
                <form class="postform" action="/postChat" method="post">
                    <input type="text" name="chatSend" id="chatSend" class="form-control">
                    <input type="submit" value="Send" class="btn btn-primary form-control">
                </form>
            </div>
        </div>
        <div class="col-md-3">
            <div class="message">
                <p>Current online users:</p>
                <div class="online"></div>
            </div>
        </div>
    </div>
</div>

    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- socket.io -->
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <!-- Footer Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <!-- Custom JS -->
    <script type="text/javascript" src="scripts/main.js"></script>

</body>
</html>