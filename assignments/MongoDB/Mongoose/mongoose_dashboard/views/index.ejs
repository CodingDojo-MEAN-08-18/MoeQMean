<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Bootstrap 4 Styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="styles/main.css">

    <title>Mongoose/Wolves Dashboard by Moe</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Welcome to Wolves Den</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="errors">
                <% if(messages.reg) { %>
                <% for (var x of messages.reg) { %>
                <h4 class="text-center"><%= x %></h4>
                <% } %>
                <% } %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h4>List of current wolves in the den:</h4>
            <div class="wolf-box">
                <ol>
                <% for (var x in wolves) { %>
                    <li>
                        <a href="/wolves/<%= wolves[x]._id %>"><%= wolves[x].name %></a>
                        <p><%= wolves[x].location %> - <%= wolves[x].age %> years old.</p>
                        <a href="/wolves/edit/<%= wolves[x]._id %>" class="btn btn-success edit">Edit</a>
                        <form class="delete" action="/wolves/destroy/<%= wolves[x]._id %>" method="post">
                            <input type="submit" class="btn btn-danger" value="Delete">
                        </form>
                    </li>
                <% } %>
                </ol>
            </div>
        </div>
        <div class="col-md-6">
            <h4>Want to join the pack?</h4>
            <p>Click the button below</p>
            <a href="/wolves/new" class="btn btn-success">Join the Pack</a>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Footer Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>