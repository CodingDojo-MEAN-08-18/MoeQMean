<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Bootstrap 4 Styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../styles/main.css">

    <title>Mongoose/Wolves Dashboard by Moe</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Welcome to Wolves Den</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="errors">
                <% if(messages.reg) { %>
                <% for (var x of messages.reg) { %>
                <h4 class="text-center"><%= x %></h4>
                <% } %>
                <% } %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form action="/wolves" method="post">
                <div class="form-group">
                    <label for="name">Wolf name: </label>
                    <input placeholder="Enter wolf's name..." class="form-control" type="text" name="name" id="name">
                </div>
                <div class="form-group">
                    <label for="location">Location:</label>
                    <input class="form-control" placeholder="Enter location..." type="text" name="location" id="location">
                </div>
                <div class="form-group">
                    <label for="age">Age:</label>
                    <input class="form-control" placeholder="Enter age" type="text" name="age" id="age">
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-success float-right">
                </div>
            </form>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Footer Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>