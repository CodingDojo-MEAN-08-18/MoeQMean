<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- Bootstrap 4 Styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="styles/main.css">

    <title>Message Board by Moe</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-12 title">
            <h2>The Message Board</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <form class="clearfix" action="/message" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input class="form-control" type="text" name="name" id="name">
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea class="form-control" name="message" id="message" cols="30" rows="10"></textarea>
                </div>
                <input type="submit" class="btn btn-primary float-right" value="Post message">
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="errors">
                <% if (messages.reg) { %>
                    <% for (var x of messages.reg) { %>
                    <h4 class="text-center"><%= x %></h4>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="message-box">
                <% if (messages) { %>
                    <% for (const message of messages) { %>
                    <h3>Name: <%= message.name %></h3>
                    <h3>Message: <%=  message.message %></h3>

                    <div class="comment-box">
                        <% for (const comment of message._comments) { %>
                        <h5><%="Name: " + comment.name %></h5>
                        <h5><%="Comment: " + comment.text %></h5>
                        <% } %>
                        <form class="clearfix" action="/comment/<%= message._id %>" method="post">
                            <div class="form-group">
                                <label for="name">Name:</label>
                                <input class="form-control" type="text" name="name" id="name">
                            </div>
                            <div class="form-group">
                                <label for="comment">Comment:</label>
                                <textarea class="form-control" name="comment" id="comment" cols="30" rows="10"></textarea>
                            </div>
                            <input type="submit" class="btn btn-primary float-right" value="Post comment">
                        </form>
                    </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Footer Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>